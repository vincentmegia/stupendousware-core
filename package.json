{
   "name": "@vincentmegia/stupendousware-core",
   "version": "0.1.3",
   "description": "test",
   "main": "lib/commonjs/index.js",
   "module": "lib/module/index.js",
   "types": "lib/typescript/index.d.ts",
   "react-native": "index.tsx",
   "source": "index",
   "files": [
      "index.tsx",
      "src",
      "lib",
      "android",
      "ios",
      "cpp",
      "stupendousware-core.podspec",
      "!lib/typescript/example",
      "!android/build",
      "!ios/build",
      "!**/__tests__",
      "!**/__fixtures__",
      "!**/__mocks__"
   ],
   "scripts": {
      "test": "jest",
      "compile": "tsc --noEmit",
      "lint": "eslint \"**/*.{js,ts,tsx}\"",
      "yaml-lint": "yamllint .github/workflows/release-package.yml",
      "prepare": "bob build && husky install",
      "release": "release-it",
      "example": "yarn --cwd example",
      "bootstrap": "yarn example && yarn && yarn example pods"
   },
   "keywords": [
      "react-native",
      "ios",
      "android"
   ],
   "repository": "https://github.com/vincentmegia/stupendousware-core",
   "author": "vincentmegia <vincent.megia@gmail.com> (https://github.com/vincentmegia)",
   "license": "MIT",
   "bugs": {
      "url": "https://github.com/vincentmegia/stupendousware-core/issues"
   },
   "homepage": "https://github.com/vincentmegia/stupendousware-core#readme",
   "publishConfig": {
      "@vincentmegia:registry": "https://npm.pkg.github.com"
   },
   "devDependencies": {
      "@arkweid/lefthook": "^0.7.7",
      "@babel/eslint-parser": "^7.18.2",
      "@commitlint/config-conventional": "^17.0.2",
      "@react-native-community/eslint-config": "^3.0.2",
      "@react-navigation/native": "^6.0.12",
      "@release-it/conventional-changelog": "^5.0.0",
      "@testing-library/react-native": "^11.2.0",
      "@types/jest": "^28.1.2",
      "@types/react": "~17.0.21",
      "@types/react-native": "0.68.0",
      "@typescript-eslint/parser": "^5.33.1",
      "commitlint": "^17.0.2",
      "eslint": "^8.4.1",
      "eslint-config-prettier": "^8.5.0",
      "eslint-plugin-prettier": "^4.0.0",
      "husky": "^8.0.0",
      "identity-obj-proxy": "^3.0.0",
      "jest": "^28.1.1",
      "pod-install": "^0.1.0",
      "prettier": "^2.0.5",
      "react": "17.0.2",
      "react-native": "0.68.2",
      "react-native-builder-bob": "^0.18.3",
      "react-test-renderer": "^18.2.0",
      "release-it": "^15.0.0",
      "typescript": "^4.5.2",
      "yaml-lint": "^1.7.0"
   },
   "resolutions": {
      "@types/react": "17.0.21"
   },
   "peerDependencies": {
      "@react-navigation/native": "*",
      "react": "*",
      "react-native": "*"
   },
   "jest": {
      "preset": "react-native",
      "modulePathIgnorePatterns": [
         "<rootDir>/example/node_modules",
         "<rootDir>/lib/"
      ],
      "moduleNameMapper": {
         "\\.(jpg|ico|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/index.mock.js",
         "\\.(css|less)$": "<rootDir>/__mocks__/index.mock.js"
      }
   },
   "commitlint": {
      "extends": [
         "@commitlint/config-conventional"
      ]
   },
   "release-it": {
      "git": {
         "commitMessage": "chore: release ${version}",
         "tagName": "v${version}"
      },
      "npm": {
         "publish": true
      },
      "github": {
         "release": true
      },
      "plugins": {
         "@release-it/conventional-changelog": {
            "preset": "angular"
         }
      }
   },
   "eslintConfig": {
      "root": true,
      "parser": "@typescript-eslint/parser",
      "extends": [
         "@react-native-community",
         "prettier"
      ],
      "rules": {
         "prettier/prettier": [
            "error",
            {
               "quoteProps": "consistent",
               "singleQuote": true,
               "tabWidth": 3,
               "trailingComma": "es5",
               "useTabs": false
            }
         ]
      }
   },
   "eslintIgnore": [
      "node_modules/",
      "lib/"
   ],
   "prettier": {
      "quoteProps": "consistent",
      "singleQuote": true,
      "tabWidth": 3,
      "trailingComma": "es5",
      "useTabs": false,
      "semi": false
   },
   "react-native-builder-bob": {
      "source": "src",
      "output": "lib",
      "targets": [
         "commonjs",
         "module",
         [
            "typescript",
            {
               "project": "tsconfig.build.json"
            }
         ]
      ]
   }
}
